.learnBox .select text {
  vertical-align: top;
  width: 50%;
  font-size: 26rpx;
  line-height: 54rpx;
  text-align: center;
  display: inline-block;
  padding: 0;
  background-color: #fff;
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  max-width: 140rpx;
  justify-content: space-between;
  height: 100%;
}

.navbar-v-line {
  width: 1px;
  height: 32rpx;
  background-color: #e5e5e5;
}

.back-pre, .back-home, .gochart {
  width: 32rpx;
  height: 36rpx;
  margin-top: 4rpx;
  padding: 10rpx;
}

.nav-capsule .back-home, .gochart {
  width: 36rpx;
  height: 40rpx;
  margin-top: 3rpx;
}

.gochartBox {
  display: inline-block;
  position: absolute;
  top: 0;
  left: 0;
}

.gochart {
  width: 48rpx;
  height: 48rpx;
  margin-top: 3rpx;
}
