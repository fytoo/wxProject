/* pages/learnListitem/learnListitem.wxss */

.main {
  color: #4d4d4d;
  padding: 20rpx 15rpx 60rpx 15rpx;
}

.content {
  position: relative;
  min-height: 1000rpx;
  padding: 35rpx 20rpx;
  box-shadow: 0 0 10px 5px #eaeffa;
  font: 28rpx/64rpx "微软雅黑";
}

.content .videoBox {
  height: 350rpx;
}

.content .videoBox image {
  height: 100% !important;
  width: 100%;
}

.content .videoBox .item {
  font: 26rpx/42rpx "微软雅黑";
}

.prev, .next {
  font: 28rpx/64rpx "微软雅黑";
  color: #fff;
  padding: 0 46rpx;
  text-align: center;
  position: fixed;
  bottom: 46rpx;
  background-color: #1b429e;
  border-radius: 30rpx;
  box-shadow: 0 0 15px -2px #000;
}

.prev {
  left: 40rpx;
}

.next {
  right: 40rpx;
}
