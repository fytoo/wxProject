/* pages/my/my.wxss */

.container {
  color: #4d4d4d;
}

.container>view {
  width: 100%;
}

.userBox> div {
  float: left;
  padding: 45rpx;
}

.userBox {
  padding: 45rpx 0 45rpx 45rpx;
}

.userimage {
  border-radius: 50%;
  border: 1px solid #486cc0;
  height: 120rpx;
  width: 120rpx;
  margin-right: 20rpx;
  float: left;
}

.userimage  image {
  height: 80%;
  width: 80%;
  margin: 20% 0 0 10%;
  border-radius: 0 0 50% 50%;
}

.itemBox {
  display: flex;
}

.item {
  flex: 1;
}

.userInfo {
  float: left;
}

.userName {
  color: #333;
  font-size: 34rpx;
  line-height: 80rpx;
}

.usercard {
  font-size: 24rpx;
  line-height: 36rpx;
}

.typeSelect {
  border-radius: 5rpx;
  padding: 30rpx 45rpx;
  margin: 0 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 0 10px 5px #eaeffa;
}

.typeSelect ul {
  display: flex;
}

.typeSelect li {
  flex: 1;
}

.typeSelect .iconBox {
  text-align: center;
}

.typeSelect .icon {
  display: inline-block;
  height: 95rpx;
  width: 95rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 52rpx;
  text-align: center;
  line-height: 95rpx;
  margin-bottom: 28rpx;
}

.name {
  font-size: 26rpx;
  text-align: center;
}

.listOptions {
  padding-top: 25rpx;
  background-color: #f5f5f5;
}

.options {
  font-size: 30rpx;
  line-height: 90rpx;
  padding: 0 40rpx;
  background-color: #fff;
}

.options>view {
  border-bottom: 1px solid #e1e1e1;
  text-indent: 24rpx;
  position: relative;
}

.optionsIcon {
  position: absolute;
  top: 30rpx;
  right: 0;
  height: 35rpx;
  width: 20rpx;
}
.operation{margin-top: 90rpx;}
.operation button{width: 525rpx;color: #fff;background-color: #c2c2c2;line-height: 78rpx;font-size: 34rpx;border: none;}
