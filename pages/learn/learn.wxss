/* pages/learn/learn.wxss */
@import '../../assets/base.wxss';

.list {
  /* $titleColor: #4d4d4d; */
  padding: 0 40rpx;
}

.item_title {
  text-align: left;
  font-size: 28rpx;
  /* color: $titleColor; */
  line-height: 34rpx;
  margin: 20rpx 0;
}

.iconfont {
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  height: 30rpx;
  width: 30rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 50%;
  /* @include border-radius(50%); */
}

.icon-teapot- {
  background-color: #da8851;
}

.icon-iconset0216 {
  background-color: #dac551;
}

.icon-swticonjiazheng {
  background-color: #51daa2;
}

.icon-jisuanjicomputer160 {
  background-color: #51a2da;
}

.item_main {
  /* @include border(#e1e1e1); */
  position: relative;
}

.item_view {
  border-bottom:1rpx solid #cdcdcd;
  position: relative;
}

.item_main > div {
  float: left;
}

.imagebox {
  width: 245rpx;
  height: 140rpx;
  margin-right: 15rpx;
  margin-bottom: 40rpx;
  float: left;
}

.imagebox > image {
  height: 100%;
  width: 100%;
}

.decbox {
  width: calc(100% - 260rpx);
  font: 22rpx/36rpx "微软雅黑";
  color: #808080;
  height: 96rpx;
  text-align: left;
  float: left;
 
}

.operatebox {
  position: absolute;
  right: 0;
  bottom: 15rpx;
}

.operatebox text {
  display: inline-block;
  min-width: 98rpx;
  text-align: center;
  font: 24rpx/44rpx "微软雅黑";
  border-radius: 3px;
}

.operatebox text:nth-child(1) {
  border: 1px solid #1b429e;
  color: #1b429e;
  margin-right: 15rpx;
}

.operatebox text:nth-child(2) {
  border: 1px solid #e15231;
  color: #e15231;
}

/* liveBox */

.livelist {
  width: 100%;
}

.liveBox {
  padding: 30rpx;
}

.liveBox>view {
  float: left;
}

.left {
  margin-top: 20rpx;
  margin-right: 25rpx;
  color: #3855a5;
  font-size: 24rpx;
  position: relative;
  min-width: 130rpx;
}

.left text {
  margin-right: 15rpx;
}

.left .liveimg, .left .watingimg {
  position: absolute;
  right: 0;
  top: 5rpx;
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #1b429e;
}

.left .living {
  text-align: center;
}

.left .wating {
  text-align: left;
}

.left .liveimg image {
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.left .watingimg {
  background-color: #dde3f1;
}

.left .wating view {
  color: #000;
  line-height: 38rpx;
}

.left .line {
  position: absolute;
  width: 5rpx;
  background-color: #dde3f1;
  height: 180rpx;
  top: 24rpx;
  left: 9.5rpx;
}
.right{width: calc(100% - 160rpx)}
.rightitem>view {
  float: left;
}

.rightitemImgbox {
  width: 225rpx;
  height: 130rpx;
  margin-right: 20rpx;
}
.rightitemdecBox{width: calc(100% - 245rpx)}
.rightitemImgbox image {
  width: 100%;
  height: 100%;
}
.rightitemdecBox .courser{
  font-size: 28rpx;
  /* line-height: 56rpx; */
}
.rightitemdecBox .teacher{
  color: #8a8a8a;
  font-size: 20rpx;
  line-height: 48rpx;
}
.rightitemdecBox .liveTime{
  color: #5e5e5e;
  font-size: 24rpx;
  line-height: 48rpx;
}
